#!/usr/bin/env sh
. ~/.config/husky/init.sh

# Load nvm and use correct Node version
nvm use > /dev/null 2>&1

# Run TypeScript type checking from playground directory
cd playground
echo "ğŸ” Running TypeScript type check..."
npm run typecheck

if [ $? -eq 0 ]; then
  echo "âœ“ Type check passed!"
  exit 0
else
  echo "âœ— Type check failed. Fix errors before committing."
  exit 1
fi
