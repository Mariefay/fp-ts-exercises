{
  "name": "fp-ts-exercises",
  "version": "2.0.0",
  "description": "Interactive exercises to learn functional programming in TypeScript using the fp-ts library",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "exercise": "node scripts/exercise.js",
    "solution": "cross-env SOLUTION=true node scripts/exercise.js",
    "generate:exercises": "node scripts/generate-playground-data.js",
    "test": "vitest run",
    "test:all": "vitest run src/**/*.{exercise,solution}.ts",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext ts --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "dev": "npm run exercise",
    "clean": "rm -rf dist node_modules/.cache",
    "prepare": "husky"
  },
  "keywords": [
    "fp-ts",
    "functional-programming",
    "typescript",
    "exercises",
    "learning",
    "tutorial"
  ],
  "author": "Marie Fayard",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mariefay/fp-ts-exercises.git"
  },
  "bugs": {
    "url": "https://github.com/Mariefay/fp-ts-exercises/issues"
  },
  "homepage": "https://github.com/Mariefay/fp-ts-exercises#readme",
  "dependencies": {
    "fp-ts": "^2.16.10"
  },
  "devDependencies": {
    "@types/node": "^20.17.0",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "@vitest/ui": "^3.2.4",
    "chokidar": "^3.6.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
