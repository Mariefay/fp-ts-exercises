{
  "name": "fp-ts-exercises",
  "type": "module",
  "workspaces": [
    "apps/web",
    "apps/api",
    "packages/exercises"
  ],
  "dependencies": {
    "fp-ts": "^2.16.9",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2"
  },
  "scripts": {
    "exercise": "npm run exercise --workspace=packages/exercises",
    "solution": "npm run solution --workspace=packages/exercises",
    "test": "npm run test --workspace=packages/exercises",
    "test:ui": "npm run test:ui --workspace=packages/exercises",
    "lint": "eslint packages/exercises/src/**/*.ts packages/exercises/scripts/**/*.js apps/web/src/**/*.{ts,tsx}",
    "lint:fix": "eslint packages/exercises/src/**/*.ts packages/exercises/scripts/**/*.js apps/web/src/**/*.{ts,tsx} --fix",
    "format": "prettier --write packages/exercises/src/**/*.ts packages/exercises/scripts/**/*.js apps/web/src/**/*.{ts,tsx}",
    "format:check": "prettier --check packages/exercises/src/**/*.ts packages/exercises/scripts/**/*.js apps/web/src/**/*.{ts,tsx}",
    "typecheck": "npm run typecheck --workspace=packages/exercises && npm run typecheck --workspace=apps/web",
    "dev:web": "npm run dev --workspace=apps/web",
    "build:web": "npm run build --workspace=apps/web",
    "dev:api": "npm run dev --workspace=apps/api"
  }
}
